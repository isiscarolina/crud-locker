{{>footer}}
<body>
  <main>
    <div class="container" id="cont-index">
        <div class="row">
            <div class="col">
                <div class="container-fluid p-4">
                    <div class="row">
                        {{#each locker}}
                        <div class="col-md-4">
                            <div class="card text-center">
                                <div class="card-body">
                                    <div class="form group">
                                        <center>
                                            <h3>
                                                {{serial_locker}}
                                            </h3>
                                        </center>
                                    </div>
                                    <div class="form group">
                                        <center>
                                            <h2>{{nome_usuario_locker}}</h2>
                                        </center>
                                    </div>
                                    <div class="form group" "mt-4">
                                        <img src="{{img}}" alt="{{nome_usuario_locker}}"
                                        height="150px" width="160px" >
                                    </div>
                                    <div class="form-group" >
                                        <a href="/locker/delete/{{id}}" class="btn btn-danger d-block" > APAGAR </a>
                                        <a href="/locker/edit/{{id}}" class="btn btn-warning d-block"> EDITAR </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{else}}
                        <div class="col-md-4 mx-auto">
                            <img src="/img/locker.jpg" alt="toti" width="230px" height="230px">
                            <h3>Nenhum locker registrado!</h3>
                        </div>
                        <div class="car card-body text-center">
                            <a class="btn btn-primary" data-toggle="modal" data-target="#agregar">Agregar um!</a>

    
                        </div>
                        {{/each}}
                    </div>                    
                </div>
            </div>
        </div>
    </div>
</main>  
</body>
